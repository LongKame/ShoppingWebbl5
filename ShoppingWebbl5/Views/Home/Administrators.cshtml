                success: function (result) {
                    $('#exampleModalCenter').modal('hide');
                    $('#id').val("");
                    $('#name').val("");
                    $('#quantity').val("");
                    $('#price').val("");
                    $('#original').val("");
                    $('#image').val("");
                    $('#brand').val("");
                    $('#category').val("");
                    console.log(result);
                    if (result.message === true) {
                        alert("Successfully");
